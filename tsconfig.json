{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/app/*",
                "src/app/redux/*"
            ]
        },
        "outDir": "build",
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "build",
        "typings/main",
        "typings/main.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true
    }
}